<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:questions="clr-namespace:Threats.Views.Questions"
             xmlns:vm="using:Threats.ViewModels.Survey"
             x:Class="Threats.Views.Survey.IntrudersStageView"
             x:DataType="vm:IntrudersStageViewModel">
  
  <StackPanel>

    <TextBlock Text="{Binding Intruder.Title}"
               TextWrapping="Wrap"/>

    <StackPanel Orientation="Horizontal">
      <TextBlock Text="{StaticResource stages.intruders.intruder.potential}"/>
      <questions:LabelWithHelpButton DataContext="{Binding Intruder.Potential}"/>
    </StackPanel>

    <TextBlock Text="{StaticResource stages.intruders.intruder.goals}"
              TextWrapping="Wrap"/> 
    
    <ItemsControl ItemsSource="{Binding Intruder.Goals}" Margin="0,10">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
           <StackPanel Orientation="Horizontal" Margin="5">
              <TextBlock Text="â€¢" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
              <TextBlock Text="{Binding}" VerticalAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>

    <Grid ColumnDefinitions="*,50,50" RowDefinitions="Auto,Auto,Auto" Margin="4">
      <TextBlock Text="{StaticResource stages.intruders.question.yes}"
                 Grid.Row="0" Grid.Column="1"/>
      <TextBlock Text="{StaticResource stages.intruders.question.no}"
                 Grid.Row="0" Grid.Column="2"/>

      <TextBlock Text="{StaticResource stages.intruders.question.include1}" 
                 TextWrapping="Wrap"
                 Grid.Row="1" Grid.Column="0"/>

      <RadioButton GroupName="q1" IsChecked="{Binding Question1.Yes}"
                   Command="{Binding OptionUpdated}"
                   Grid.Row="1" Grid.Column="1"/>
      <RadioButton GroupName="q1" IsChecked="{Binding Question1.No}"
                   Command="{Binding OptionUpdated}"
                   Grid.Row="1" Grid.Column="2"/>

      <TextBlock Text="{StaticResource stages.intruders.question.include2}" 
                 TextWrapping="Wrap"
                 Grid.Row="2" Grid.Column="0"/>

      <RadioButton GroupName="q2" IsChecked="{Binding Question2.Yes}"
                   Command="{Binding OptionUpdated}"
                   Grid.Row="2" Grid.Column="1"/>
      <RadioButton GroupName="q2" IsChecked="{Binding Question2.No}"
                   Command="{Binding OptionUpdated}"
                   Grid.Row="2" Grid.Column="2"/>
    </Grid>

  </StackPanel>
</UserControl>
