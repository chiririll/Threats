<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:questions="clr-namespace:Threats.Views.Questions"
             xmlns:vm="using:Threats.ViewModels.Survey"
             x:Class="Threats.Views.Survey.IntrudersStageView"
             x:DataType="vm:IntrudersStageViewModel">
  
  <StackPanel>
    
    <TextBlock Text="{Binding Intruder.Title}"
               TextWrapping="Wrap"/>
    <TextBlock Text="{Binding Intruder.Potential}"
               TextWrapping="Wrap"/> 

    <ItemsControl ItemsSource="{Binding Intruder.Goals}" Margin="0,10">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
           <StackPanel Orientation="Horizontal" Margin="5">
              <TextBlock Text="â€¢" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
              <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>

    <questions:RadioQuestion DataContext="{Binding Intruder.IncludedQuestion}" Margin="0,10"/>
    <questions:RadioQuestion DataContext="{Binding Intruder.TypeQuestion}" Margin="0,10"/>

  </StackPanel>
</UserControl>
