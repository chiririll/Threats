<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:questions="clr-namespace:Threats.Views.Questions"
             xmlns:vm="using:Threats.ViewModels.Survey"
             x:Class="Threats.Views.Survey.IntrudersStageView"
             x:DataType="vm:IntrudersStageViewModel">
  
  <StackPanel>
    
    <TextBlock Text="{Binding Intruder.Title}"/>
    <TextBlock Text="{Binding Intruder.Potential}"/> 
    <ItemsControl ItemsSource="{Binding Intruder.Goals}">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <TextBlock/>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>

    <questions:RadioQuestion DataContext="{Binding Intruder.IncludedQuestion}"/>
    <questions:RadioQuestion DataContext="{Binding Intruder.TypeQuestion}"/>

  </StackPanel>
</UserControl>
