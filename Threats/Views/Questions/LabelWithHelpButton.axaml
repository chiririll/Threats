<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Threats.ViewModels.Questions"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="30"
             x:Class="Threats.Views.Questions.LabelWithHelpButton"
             x:DataType="vm:LabelWithHelpButtonViewModel">

  <Grid ColumnDefinitions="Auto, 20">

    <Button Grid.Column="1"
            Content="?"
            Width="16"
            Height="16"
            Padding="2"
            CornerRadius="10"
            HorizontalContentAlignment="Center"
            FontSize="10"
            FontWeight="Bold"
            IsVisible="{Binding HasDescription}">
      <Button.Flyout>
        <Flyout>
          <TextBlock Text="{Binding Description}"
                     MaxWidth="400"
                     TextWrapping="Wrap"/>
        </Flyout>
      </Button.Flyout>
    </Button>

    <TextBlock Grid.Column="0"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Padding="0,0,5,0"
            Text="{Binding Label}" />

  </Grid>

</UserControl>
