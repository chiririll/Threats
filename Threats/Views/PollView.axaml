<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="450"
             x:Class="Threats.Views.PollView">
  <DockPanel>
    <Button DockPanel.Dock="Bottom"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center">
        Next
    </Button>
    <StackPanel>
      <CheckBox Margin="4">Ущерб физическому лицу (У1)</CheckBox>
      <CheckBox Margin="4">Ущерб юридическому лицу, индивидуальному предпринимателю, связанный с хозяйственной деятельностью (У2)</CheckBox>
      <CheckBox Margin="4">Ущерб государству (У3)</CheckBox>
    </StackPanel>
  </DockPanel>
</UserControl>
